<!-- Content -->
<div class="main">
    <div class="topbar">
        <div class="toggle">
            <ion-icon name="menu-outline"></ion-icon>
        </div>
        <div class="search">
            <label>
                <input type="text" placeholder="search">
                <ion-icon name="search-outline"></ion-icon>
            </label>
        </div>
        <div class="user">
            <!--<img src="images/user.png" alt="foto_user">-->
        </div>
        <div class="user-info">
            <span class="user-name"><%= current_usuario.nome if current_usuario %></span>
            <!-- Data e hora -->
            <p id="current-datetime"><%= Time.now.strftime("%A, %d/%m/%Y - %H:%M:%S") %></p>
        </div>                 
    </div>                       
</div>
<!-- Fim Content -->