<div class="card">
  <div class="card-header">
    <h3 class="card-title">Cadastro de Usuário</h3>
  </div>
  <div class="card-body">
    <%= form_with model: @usuario, url: usuarios_path, local: true do |f| %>
      <div class="mb-3">
        <%= f.label :nome, class: "form-label" %>
        <%= f.text_field :nome, class: "form-control", placeholder: "Digite o nome do usuário", required: true %>
      </div>
      
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", placeholder: "Digite o email do usuário", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "Senha", class: "form-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Digite a senha", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "Confirmação de Senha", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirme a senha", required: true %>
      </div>

      <div class="d-grid">
        <%= f.submit "Cadastrar", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>
