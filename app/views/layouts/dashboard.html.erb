<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!--Styles CSS-->
    <%= stylesheet_link_tag 'style', media: 'all' %>
</head>
<body>
    <!--Navigation-->
    <div class="container">
        <div class="navigation">
            <ul>
                <li>
                    <a href="">
                        <span class="icon">
                            <ion-icon name="business-outline"></ion-icon>
                        </span>
                        <span class="title">Empresa</span>
                    </a>
                </li>

                <li>
                    <a href="<%= dashboard_path %>">
                        <span class="icon">
                            <ion-icon name="home-outline"></ion-icon>
                        </span>
                        <span class="title">Dashboard</span>
                    </a>
                </li>

                <li>
                    <a href="<%= new_usuario_path %>">
                        <span class="icon">
                            <ion-icon name="people-outline"></ion-icon>
                        </span>
                        <span class="title">Usu√°rios</span>
                    </a>
                </li>

                <li>
                    <a href="<%= new_paciente_path %>">
                        <span class="icon">
                            <ion-icon name="body-outline"></ion-icon>
                        </span>
                        <span class="title">Pacientes</span>
                    </a>
                </li>

                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="calendar-outline"></ion-icon>
                        </span>
                        <span class="title">Agendamentos</span>
                    </a>
                </li>

                <li>
                    <a href="<%= new_psicopedagogo_path %>">
                        <span class="icon">
                            <ion-icon name="medical-outline"></ion-icon>
                        </span>
                        <span class="title">Psicopedagogos</span>
                    </a>
                </li>

                <li>
                    <a href="">
                        <span class="icon">
                            <ion-icon name="lock-closed-outline"></ion-icon>
                        </span>
                        <span class="title">Senhas</span>
                    </a>
                </li>

                <li>
                    <%= link_to logout_path, method: :delete, data: { confirm: "Tem certeza que deseja sair?", turbolinks: false }, class: '' do %>
                        <span class="icon">
                        <ion-icon name="log-out-outline"></ion-icon>
                        </span>
                        <span class="title">Sign out</span>
                    <% end %>
                </li>

            </ul>
        </div>

        <!--########## Main ##########-->
        <div class="main">
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>
                <div class="search">
                    <label>
                        <input type="text" placeholder="search">
                        <ion-icon name="search-outline"></ion-icon>
                    </label>
                </div>
                <div class="user">
                    <!--<img src="images/user.png" alt="foto_user">-->
                </div>
                <div class="user-info">
                    <span class="user-name"><%= current_usuario.nome if current_usuario %></span>
                    <!-- Data e hora -->
                    <p id="current-datetime"><%= Time.now.strftime("%A, %d/%m/%Y - %H:%M:%S") %></p>
                </div> 
            </div>
            
            <!--########## Main ##########-->
            <div class="cardBox">
                <div class="card">
                    <div>
                        <div class="numbers">1,504</div>
                        <div class="cardName">Daily Views</div>
                    </div>
                    <div class="iconBox">
                        <ion-icon name="eye-outline"></ion-icon>
                    </div>                    
                </div>

                <div class="card">
                    <div>
                        <div class="numbers">80</div>
                        <div class="cardName">Sales</div>
                    </div>
                    <div class="iconBox">
                        <ion-icon name="cart-outline"></ion-icon>
                    </div>
                </div>

                <div class="card">
                    <div>
                        <div class="numbers">287</div>
                        <div class="cardName">Comments</div>
                    </div>
                    <div class="iconBox">
                        <ion-icon name="chatbubbles-outline"></ion-icon>
                    </div>                    
                </div>

                <div class="card">
                    <div>
                        <div class="numbers">7,842</div>
                        <div class="cardName">Earning</div>
                    </div>
                    <div class="iconBox">
                        <ion-icon name="cash-outline"></ion-icon>
                    </div>                    
                </div>
             </div>

             <!--########## Order Details List ##########-->
             <div class="details">
                <div class="recentOrders">
                    <div class="cardHeader">
                        <h2>Recent Orders</h2>
                        <a href="#" class="btn">View All</a>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <td>Name</td>
                                <td>Price</td>
                                <td>Payment</td>
                                <td>Status</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Star Refrigerator</td>
                                <td>$ 1200</td>
                                <td>Paid</td>
                                <td><span class="status_delivered">Delivered</span></td>
                            </tr>
                            <tr>
                                <td>Star Refrigerator</td>
                                <td>$ 1200</td>
                                <td>Paid</td>
                                <td><span class="status_pending">Pending</span></td>
                            </tr>
                            <tr>
                                <td>Star Refrigerator</td>
                                <td>$ 1200</td>
                                <td>Paid</td>
                                <td><span class="status_return">Return</span></td>
                            </tr>
                            <tr>
                                <td>Star Refrigerator</td>
                                <td>$ 1200</td>
                                <td>Paid</td>
                                <td><span class="status_inProgress">In Progress</span></td>
                            </tr>                            
                        </tbody>
                    </table>
                </div>
             </div>
        </div>
    </div>

    

    <!--Scripts JS-->
    <%= javascript_include_tag 'main', 'data-turbolinks-track': 'reload' %>

    <!--Icons-->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>

        